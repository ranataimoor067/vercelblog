{
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist" 
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "api/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html" 
      }
    ]
  }